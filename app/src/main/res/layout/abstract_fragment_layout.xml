<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue102"
    android:id="@+id/abstract_fragment_parentlayout">
    <LinearLayout
        android:id="@+id/castle_layout_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/floorlayout_fragment">
        <ImageView
            android:id="@+id/castle_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/floorlayout_fragment"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_layout"
        app:layout_constraintLeft_toRightOf="@id/castle_layout_fragment"
        app:layout_constraintBottom_toTopOf="@id/floorlayout_fragment">
        <ImageView
            android:id="@+id/player_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/boxLayout_fragment"
        app:layout_constraintBottom_toTopOf="@id/floorlayout_fragment"
        app:layout_constraintLeft_toRightOf="@id/player_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>
    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/floorlayout_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/floorlayout_fragment"
        app:layout_constraintLeft_toRightOf="@id/boxLayout_fragment">
        <ImageView
            android:id="@+id/pipe_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/greenpipe"
            app:layout_constraintBottom_toTopOf="@id/floorlayout_fragment"
            app:layout_constraintLeft_toRightOf="@id/boxLayout_fragment"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>