<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/fleche_gauche"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/fleche_gauche"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
        android:id="@+id/fleche_droite"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/fleche_droite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_title"
        android:textSize="50sp"
        android:fontFamily="@font/title_font"
        android:layout_gravity="top"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/fleche_gauche"
        app:layout_constraintRight_toLeftOf="@id/fleche_droite"/>
    <TextView
        android:id="@+id/world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/world"
        android:fontFamily="@font/dogicapixelbold"
        android:textSize="35sp"
        app:layout_constraintTop_toBottomOf="@id/menu_title"
        app:layout_constraintLeft_toRightOf="@id/fleche_gauche"
        app:layout_constraintRight_toLeftOf="@id/fleche_droite"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/menubar_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/menu_char_set_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/parametres_menu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/settings"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>